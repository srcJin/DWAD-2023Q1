{{#extends "base"}}

  {{#block "content"}}
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Cost</th>
          <th>Description</th>
          <th></th>
        </tr>

      </thead>
      <tbody>
        {{#each rooms}}
          <tr>
            <td>
              {{this.id}}
            </td>
            <td>
              {{this.name}}
            </td>
            <td>
              {{this.cost}}
            </td>
            <td>
              {{this.description}}
            </td>
            {{!-- Links to update and delete --}}
            <td>
              <a
                href="/rooms/{{this.id}}/update"
                class="btn btn-primary btn-sm"
              >Update</a>
              <a
                href="/rooms/{{this.id}}/delete"
                class="btn btn-danger btn-sm"
              >Delete</a>
            </td>

          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/block}}

{{/extends}}
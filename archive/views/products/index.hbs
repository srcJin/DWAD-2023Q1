{{#extends "base"}}
  {{#block "content"}}
    <h1>Search</h1>
    <form method="GET">
      {{{form}}}

      <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search" />
    </form>
    <h1>All Products</h1>

    <a href="/products/create" class="btn btn-primary">Create New</a>

    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Category</th>
          <th>Cost</th>
          <th>Description</th>
          <th>Tags</th>
          <th></th>
        </tr>

      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td>
              {{this.id}}
            </td>
            <td>
              {{this.name}}
            </td>
            <td>
              {{this.category.name}}
            </td>
            <td>
              {{this.cost}}
            </td>
            <td>
              {{this.description}}
            </td>
            <td>
              {{#each this.tags}}
                <span class="badge bg-secondary">{{this.name}}</span>
              {{/each}}
            </td>
            <td>
              <a href="/cart/{{this.id}}/add" class="btn btn-success btn-sm">Add
                to cart</a>
              <a
                href="/products/update/{{this.id}}"
                class="btn btn-success btn-sm"
              >Edit</a>
              <a
                href="/products/delete/{{this.id}}"
                class="btn btn-danger btn-sm"
              >Delete</a>

            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/block}}
{{/extends}}
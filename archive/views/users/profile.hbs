{{#extends 'base'}}
{{#block 'content'}}

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">User Profile</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{user.username}}</h6>
    <p class="card-text">{{user.email}}</p>
    <a href="/users/logout" class="card-link">Logout</a>
  </div>
</div>

{{/block}}
{{/extends}}